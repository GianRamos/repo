.b19
	background-color c-3
	border-radius 20px 20px 0px 0px
	padding 110px 0
	margin-top -20px
	@media screen and (max-width 960px)
		padding 70px 0
	@media screen and (max-width 767px)
		border-radius 10px 10px 0 0

.b19-content
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content space-between
	@media screen and (max-width 960px)
		flex-direction column
		justify-content inherit

.b19-left
	width calc(265% * 100 /1200)
	@media screen and (max-width 960px)
		width 100%
		text-align center
		margin-bottom 30px

.b19-right
	width calc(896% * 100 /1200)
	@media screen and (max-width 960px)
		width 100%

.b19-button
	display block
	line-height 24px
	color c-13
	font-family t-0
	font-weight 300
	font-size 16px
	border-bottom 4px solid transparent
	padding 10px 0
	margin 0 0 15px 0
	@media screen and (min-width 1025px)
		transition all .25s ease
		&:hover
			color c-1

	&.active
		color c-1
		font-weight 500
		border-color c-1


.b19-title
	display block
	line-height 32px
	color c-0
	font-family t-0
	font-weight 500
	font-size 24px
	margin 0 0 20px 0

.b19-block
	display flex
	flex-direction row
	flex-wrap wrap
	align-items flex-start
	margin 0 -5px
	@media screen and (max-width 767px)
		flex-direction column
		align-items inherit
		margin 0

.b19-card
	display block
	width calc(100% / 3 - 10px)
	overflow hidden
	border-radius 10px
	position relative
	margin 10px 5px 0 5px
	@media screen and (min-width 1025px)
		&:hover
			.b19-image:before
				opacity 0
				visibility hidden
				transition all .25s ease .10s
			.b19-image:after
				opacity 1
				transition all .25s ease
	@media screen and (max-width 960px)
		width calc(100% / 2 - 10px)
	@media screen and (max-width 767px)
		width 100%
		margin-left 0
		margin-right 0
	

.b19-image
	width 100%
	position relative
	margin 0
	&:before
		content ""
		width 100%
		height 100%
		background linear-gradient(180deg, rgba(2, 13, 30, 0.00) 0%, rgba(2, 13, 30, 0.88) 100%)
		position absolute
		top 0
		bottom 0
	&:after
		content ""
		width 100%
		height 100%
		background linear-gradient(180deg, rgba(2, 13, 30, 0.56) 0%, rgba(2, 13, 30, 0.88) 100%)
		opacity 0
		position absolute
		top 0
		bottom 0

	img
		img-res()

.b19-info
	width 100%
	position absolute
	bottom 0
	left 0
	box-sizing border-box
	padding 0 23px 30px 23px
	@media screen and (max-width 1024px)
		padding 0 15px 30px 15px

.b19-subtitle
	display block
	line-height 28px
	color c-3
	font-family t-0
	font-weight 600
	font-size 18px
	margin 0 0 25px 0

.b19-link
	display block
	line-height 22px
	color c-3
	font-family t-0
	font-weight 400
	font-size 14px
	text-decoration-line underline
	margin 0