.footer
	background-color c-5
	color c-3

.footer_up
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content space-between
	@media screen and (max-width 960px)
		flex-direction column
		justify-content inherit
		padding 50px 0 20px 0

.footer_left
	width calc(253% * 100 / 1200)
	padding 52px 0
	@media screen and (max-width 1024px)
		width 17%
	@media screen and (max-width 960px)
		width 100%
		padding 0
		margin-bottom 50px

.footer_right
	display flex
	flex-direction row
	flex-wrap wrap
	width calc(887% * 100 / 1200)
	padding 54px 0 38px 0
	@media screen and (max-width 1024px)
		width 80%
	@media screen and (max-width 960px)
		flex-direction column
		width 100%
		padding 0

.footer_box
	box-sizing border-box

.footer_box_1
	width calc(232% * 100 / 887)
	padding-right 10px
	@media screen and (max-width 1024px)
		width 28%
	@media screen and (max-width 960px)
		width 100%
		padding-right 0

.footer_box_2
	width calc(167% * 100 / 887)
	padding-right 10px
	@media screen and (max-width 1024px)
		width 20%
	@media screen and (max-width 960px)
		width 100%
		padding-right 0

.footer_box_3
	width calc(233% * 100 / 887)
	padding-right 10px
	@media screen and (max-width 1024px)
		width 22%
	@media screen and (max-width 960px)
		width 100%
		padding-right 0

.footer_box_4
	width calc(255% * 100 / 887)
	@media screen and (max-width 1024px)
		width 30%
	@media screen and (max-width 960px)
		order -1
		width 100%
		border-bottom 1px solid c-3
		padding 0 0 30px 0
		margin-bottom 20px
		.footer_title
			display none
			text-align center
			padding 0
			margin-bottom 20px

.footer_logo
	max-width 253px
	width 100%
	margin 0 auto
	@media screen and (max-width 960px)
		margin-bottom 30px
	img
		img-res()

.footer_networks_wrap
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content center

.footer_networks_item
	margin 30px 15px 0 15px
	@media screen and (min-width 961px) and (max-width 1024px)
		margin 30px 10px 0 10px	

.footer_networks_link
	display flex
	flex-direction column
	justify-content center
	align-items center
	width 30px
	height 30px
	color c-6
	font-size 30px

.footer_title
	display block
	line-height 1
	color c-2
	font-family t-0
	font-weight 600
	font-size 18px
	margin 0 0 20px 0
	@media screen and (max-width 960px)
		position relative
		padding 15px 0
		margin 0
		&:before, &:after
			display flex
			flex-direction column
			justify-content center
			align-items center
			width 20px
			height 20px
			font-family icomoon
			font-size 20px
			position absolute
			top 0
			bottom 0
			right 0
			margin auto			
		&:before
			content "\e906"
		&:after
			content "\e907"
			opacity 0

		&.active
			&:before
				opacity 0
			&:after
				opacity 1
			

.footer_menu
	@media screen and (min-width 961px)
		display block !important
		height auto !important
	@media screen and (max-width 960px)
		display none

.footer_menu_wrap
	@media screen and (max-width 960px)
		padding 0 0 15px 0

.footer_menu_item
	margin-bottom 10px
	&:last-child
		margin-bottom 0

.footer_menu_link
	display block
	line-height 1.2
	color c-3
	font-family t-0
	font-weight 300
	font-size 14px
	margin 0
	@media screen and (min-width 1025px)
		transition all .25s ease
		&:hover
			color c-2

	&.active
		font-weight 500

.footer_info
	@media screen and (max-width 960px)
		max-width 230px
		width 100%
		margin 0 auto

.footer_info_box
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content space-between
	align-items center
	margin-bottom 15px
	&:last-child
		margin-bottom 0

.footer_info_icon
	display flex
	flex-direction column
	justify-content 
	align-items center
	width 20px
	height 20px
	color c-2
	font-size 20px
	margin 0

.footer_info_texts
	width calc(100% - 30px)
	line-height 1.2
	color c-3
	font-family t-0
	font-weight 300
	font-size 14px
	strong
		line-height 1
		letter-spacing 0.6px
		color c-2
		font-family t-0
		font-weight 500
		font-size 12px
		text-transform uppercase
	p
		margin-bottom 6px
		&:last-child
			margin-bottom 0

.footer_down
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content space-between
	align-items center
	border-top 1px solid c-3
	padding 13px 0 19px 0
	@media screen and (max-width 960px)
		flex-direction column
		justify-content center
		text-align center

.footer_copyright
	line-height 1.1
	color c-3
	font-family t-0
	font-weight 400
	font-size 12px
	@media screen and (max-width 960px)
		margin-bottom 10px
	p
		margin 0

.footer_team
	display block
	line-height 24px
	color c-3
	font-family t-0
	font-weight 300
	font-size 12px
	margin 0
	p
		margin 0
	strong
		font-weight 600