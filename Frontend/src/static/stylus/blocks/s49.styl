.b49-content
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content space-between
	@media screen and (max-width 960px)
		flex-direction column
		justify-content inherit

.b49-left
	width calc(550% * 100 / 1200)
	padding 174px 0 214px 0
	@media screen and (max-width 1024px)
		padding-top 140px
	@media screen and (max-width 960px)
		width 100%
		text-align center
		padding 100px 0
	@media screen and (max-width 767px)
		padding-top 70px
		padding-bottom 50px

.b49-right
	display flex
	flex-direction column
	justify-content flex-end
	width calc(588% * 100 / 1200)
	padding 81px 0 0 0
	@media screen and (max-width 960px)
		width 100%
		padding-top 0

.b49-title
	display block
	line-height 1.1
	letter-spacing -3px
	color c-1
	font-family t-0
	font-weight 700
	font-size 150px
	margin 0 0 30px 0
	@media screen and (max-width 767px)
		font-size 40px

.b49-subtitle
	display block
	line-height 1.1
	letter-spacing -0.38px
	color c-1
	font-family t-0
	font-weight 600
	font-size 38px
	margin 0 0 10px 0
	@media screen and (max-width 767px)
		font-size 30px

.b49-description
	display block
	max-width 384px
	width 100%
	line-height 26px
	color c-27
	font-family t-0
	font-weight 400
	font-size 16px
	margin 0
	@media screen and (max-width 960px)
		margin 0 auto
	@media screen and (max-width 767px)
		font-size 14px

	p
		margin 0

.b49-buttons
	display flex
	flex-direction row
	flex-wrap wrap
	margin-top 40px
	@media screen and (max-width 960px)
		justify-content center
	@media screen and (max-width 767px)
		margin-top 20px

.b49-item
	margin 12px 12px 0 0
	@media screen and (max-width 960px)
		margin 12px 6px 0 6px

.b49-image
	max-width 510px
	width 100%
	margin 0
	@media screen and (max-width 960px)
		margin 0 auto

	img
		img-res()