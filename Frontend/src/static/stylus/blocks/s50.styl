.b50
	padding 90px 0

.b50-content
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content space-between
	align-items center
	@media screen and (max-width 960px)
		flex-direction column
		justify-content inherit

.b50-left
	width calc(603% * 100 / 1200)
	@media screen and (max-width 1024px)
		width 48%
	@media screen and (max-width 960px)
		width 100%
		margin-bottom 30px

.b50-right
	width calc(475% * 100 / 1200)
	@media screen and (max-width 1024px)
		width 44%
	@media screen and (max-width 960px)
		width 100%

.b50-title
	display block
	line-height 1.1
	color c-0
	font-family t-0
	font-weight 500
	font-size 80px
	margin 0 0 20px 0
	@media screen and (max-width 767px)
		font-size 40px

.b50-description
	display block
	line-height 28px
	color c-0
	font-family t-0
	font-weight 400
	font-size 18px
	margin 0
	@media screen and (max-width 767px)
		line-height 1.5
		font-size 16px
		
	p
		margin 0

.b50-button
	@media screen and (max-width 767px)
		button
			width 100%
			padding 0