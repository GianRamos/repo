.b11
	padding 50px 0

.b11-head
	max-width 636px
	width 100%
	text-align center
	margin 0 auto 70px auto
	@media screen and (max-width 767px)
		margin-bottom 50px

.b11-title
	display block
	line-height 32px
	color c-2
	font-family t-0
	font-weight 700
	font-size 24px
	margin 0 0 15px 0
	@media screen and (max-width 767px)
		line-height 1.1
		font-size 20px

.b11-subtitle
	display block
	line-height 54px
	color c-0
	font-family t-0
	font-weight 700
	font-size 46px
	margin 0
	@media screen and (max-width 767px)
		line-height 1.2
		font-size 30px

.b11-item
	display flex
	flex-direction row
	flex-wrap wrap
	@media screen and (max-width 767px)
		flex-direction column
		position relative
		padding-left 60px

.b11-item:first-child
	@media screen and (min-width 768px)
		.b11-boxleft:before
			height 50%

.b11-item:last-child
	@media screen and (min-width 768px)
		.b11-boxleft:before
			height 50%
			top 0
			bottom inherit
	@media screen and (max-width 767px)
		.b11-boxleft:before
			display none
		.b11-boxright
			padding-bottom 0

.b11-item:nth-child(even)
	@media screen and (min-width 768px)
		flex-direction row-reverse
		.b11-right
			flex-direction row-reverse

.b11-item.active
	@media screen and (min-width 1025px)
		.b11-left,
		.b11-boxright,
		.b11-year
			opacity 1
			transform translateY(0px)

.b11-left
	width calc(510% * 100 / 1200)
	padding 30px 0
	@media screen and (min-width 1025px)
		opacity 0
		transform translateY(200px)
		transition all 1s ease-in-out
	@media screen and (max-width 767px)
		width 100%
		padding 0

.b11-right
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content space-between
	width calc(690% * 100 / 1200)
	@media screen and (max-width 767px)
		width 100%

.b11-image
	width 100%
	margin 0
	img
		img-res()
		border-radius 20px

.b11-boxleft
	display flex
	flex-direction column
	justify-content center
	width calc(180% * 100 / 690)
	position relative
	padding 30px 0
	@media screen and (max-width 767px)
		justify-content flex-start
		width 50px
		height 100%
		position absolute
		top 0
		left 0
		padding 0

	&:before
		content ""
		width 5px
		height 100%
		background-color c-23
		position absolute
		bottom 0
		left 0
		right 0
		margin auto

.b11-boxright
	display flex
	flex-direction column
	justify-content center
	width calc(486% * 100 / 690)
	padding 30px 0
	@media screen and (min-width 1025px)
		opacity 0
		transform translateY(200px)
		transition all 1s ease-in-out
	@media screen and (max-width 767px)
		justify-content flex-start
		width 100%
		padding-top 20px
		padding-bottom 50px

.b11-year
	display flex
	flex-direction column
	justify-content center
	align-items center
	width 72px
	height 72px
	background-color c-2
	color c-3
	font-family t-0
	font-weight 400
	font-size 18px
	border-radius 50%
	position relative
	z-index 2
	margin 0 auto
	@media screen and (min-width 1025px)
		opacity 0
		transform translateY(200px)
		transition all 1s ease-in-out
	@media screen and (max-width 767px)
		width 50px
		height 50px
		font-size 14px

.b11-textup
	display block
	line-height 38px
	color c-0
	font-family t-0
	font-weight 500
	font-size 30px
	margin 0 0 25px 0
	@media screen and (max-width 767px)
		line-height 1.2
		font-size 22px
		margin-bottom 15px

.b11-textdown
	display block
	line-height 24px
	color c-0
	font-family t-0
	font-weight 300
	font-size 16px
	margin 0
	@media screen and (max-width 767px)
		line-height 1.4
		font-size 14px

	p
		margin 0