.b5
	padding 70px 0 0 0
	@media screen and (max-width 767px)
		padding-top 50px

.b5-content
	overflow hidden

.b5-head
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content space-between
	align-items center

.b5-title
	display block
	line-height 1.1
	color c-0
	font-family t-0
	font-weight 600
	font-size 46px
	margin 0
	@media screen and (max-width 767px)
		width calc(100% - 100px)
		font-size 30px

.b5-controls
	display flex
	flex-direction row
	flex-wrap wrap

.b5-arrow
	display flex
	flex-direction column
	justify-content center
	align-items center
	width 30px
	height 30px
	color c-1
	font-size 14px
	cursor pointer
	border 1px solid c-1
	border-radius 50%
	opacity 0.5
	box-sizing border-box
	margin 0 10px 0 0
	@media screen and (min-width 1025px)
		transition all .25s ease
		&:hover
			opacity 1

	&:last-child
		margin-right 0

.b5-slider
	width calc(100% + 60px)
	margin-left -30px
	@media screen and (max-width 1024px)
		width calc(100% + 20px)
		margin-left -10px

.b5-item
	padding 35px 30px 30px 30px
	@media screen and (max-width 1024px)
		padding 35px 10px 30px 10px

.b5-card
	display block
	min-height 381px
	background-color c-11
	border-radius 10px
	position relative
	box-sizing border-box
	padding 43px 18px 75px 18px
	margin 0
	@media screen and (min-width 1025px)
		transition all .25s ease
		&:hover
			background-color c-4
			.b5-icon,
			.b5-subtitle,
			.b5-description
				color c-3

.b5-icon
	display flex
	flex-direction column
	justify-content center
	align-items center
	width 54px
	height 54px
	color c-1
	font-size 54px
	margin 0 0 34px 0
	@media screen and (min-width 1025px)
		transition all .25s ease

.b5-subtitle
	display block
	line-height 38px
	color c-0
	font-family t-0
	font-weight 500
	font-size 30px
	margin 0 0 30px 0
	@media screen and (min-width 1025px)
		transition all .25s ease
	@media screen and (max-width 767px)
		line-height 1.2
		font-size 26px

	p
		margin 0

.b5-description
	display block
	line-height 20px
	color c-0
	font-family t-0
	font-weight 400
	font-size 14px
	margin 0
	@media screen and (min-width 1025px)
		transition all .25s ease

	p
		margin 0

.b5-button
	width calc(100% - 36px)
	position absolute
	bottom 43px
	left 0
	right 0
	margin auto

.b5-btn
	display inline-block
	height 26px
	line-height 26px
	color c-2
	font-family t-0
	font-weight 600
	font-size 14px
	padding 0 16px 0 0
	margin 0

.b5-btn-icon
	display inline-block
	vertical-align middle
	width 18px
	height 18px
	line-height 18px
	color c-2
	text-align center
	font-size 12px
	margin 0 0 0 8px