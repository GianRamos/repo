.b7
	background-color c-8
	border-radius 20px 20px 0px 0px
	padding 65px 0 99px 0
	@media screen and (max-width 767px)
		padding 65px 0 75px 0

.b7-content
	@media screen and (max-width 767px)
		position relative
		padding-bottom 100px

.b7-head
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content space-between
	align-items center
	@media screen and (max-width 767px)
		flex-direction column
		justify-content inherit
		align-items inherit

.b7-title
	display block
	max-width 714px
	width 100%
	line-height 54px
	color c-3
	font-family t-0
	font-weight 600
	font-size 46px
	margin 0
	@media screen and (max-width 960px)
		max-width none
		width calc(100% - 154px)
	@media screen and (max-width 767px)
		width 100%
		line-height 1.2
		font-size 30px

.b7-button
	@media screen and (max-width 767px)
		width 100%
		text-align center
		position absolute
		bottom 0
		left 0

.b7-items
	display flex
	flex-direction row
	flex-wrap wrap
	border-top 1px solid c-9
	margin-top 22px
	@media screen and (max-width 767px)
		flex-direction column

.b7-itembox
	display block
	width 31.8333%
	border-left 1px solid c-9
	box-sizing border-box
	padding 43px 0 6px 0
	margin 0
	@media screen and (max-width 767px)
		width 100%
		border-left none
		border-bottom 1px solid c-9
		padding 30px 0
		&:last-child
			border-bottom none

	&:nth-child(1)
		border-left none

	&:nth-child(2)
		width 36.3333%
		@media screen and (max-width 767px)
			width 100%
		
		.b7-wrap
			margin auto

	&:nth-child(3)
		.b7-wrap
			margin-left auto

.b7-wrap
	max-width 326px
	width 94%
	margin 0
	@media screen and (max-width 1024px)
		width 90%
	@media screen and (max-width 767px)
		max-width none
		width 100%

.b7-subtitle
	display block
	line-height 28px
	color c-3
	font-family t-0
	font-weight 500
	font-size 18px
	margin 0 0 11px 0
	@media screen and (max-width 1024px)
		font-size 16px

.b7-description
	display block
	line-height 20px
	color c-3
	font-family t-0
	font-weight 400
	font-size 14px
	margin 0
	p
		margin 0

.b7-description.textshort
	text-overflow ellipsis
	overflow hidden
	display -webkit-box
	-webkit-line-clamp 4
	-webkit-box-orient vertical

.b7-btn
	display inline-block
	height 26px
	line-height 26px
	color c-2
	font-family t-0
	font-weight 600
	font-size 14px
	padding 0 16px 0 6px
	margin-top 11px

.b7-btn-icon
	display inline-block
	vertical-align middle
	width 18px
	height 18px
	line-height 18px
	font-size 14px
	text-align center
	margin 0 0 0 8px