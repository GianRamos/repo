.b18
	background-color c-8
	padding 120px 0 123px 0
	@media screen and (max-width 767px)
		padding 80px 0 100px 0

.b18-content
	text-align center
	
.b18-title
	display block
	line-height 24px
	color c-3
	font-family t-0
	font-weight 500
	font-size 16px
	margin 0 0 50px 0
	@media screen and (max-width 960px)
		margin-bottom 30px

.b18-subtitle
	display block
	line-height 88px
	color c-3
	font-family t-0
	font-weight 500
	font-size 80px
	margin 0
	@media screen and (max-width 960px)
		line-height 1.1
		font-size 60px
	@media screen and (max-width 767px)
		font-size 30px