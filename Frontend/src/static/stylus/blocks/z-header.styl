.header
	height 90px
	.header-block
		width 100%
		background-color c-8
		position fixed
		top 0
		left 0
		z-index 100

	.header-ctn
		display flex
		flex-direction row
		flex-wrap wrap
		justify-content space-between
		align-items center
		height 90px

	.header-logo
		display block
		max-width 202px
		width 100%
		margin 0
		img
			img-res()

	.header-navigation
		display flex
		flex-direction row
		flex-wrap wrap
		align-items center

	.header-menu
		@media screen and (max-width 1024px)
			display none

	.header-wrap
		display flex
		flex-direction row
		flex-wrap wrap
		align-items center

	.header-item
		margin-right calc(10px + (24 - 10) * ((100vw - 320px) / (1920 - 320)))
		&:last-child
			margin-right 0

	.header-link
		display block
		line-height 1
		color c-3
		font-family t-0
		font-weight 400
		font-size calc(14px + (16 - 14) * ((100vw - 320px) / (1920 - 320)))
		margin 0
		@media screen and (min-width 1025px)
			transition all .25s ease
			&:hover
				color c-2

		&.active
			font-weight 600

	.header-button
		margin-left calc(10px + (78 - 10) * ((100vw - 320px) / (1920 - 320)))
		@media screen and (max-width 1024px)
			display none

	.header-button a
		text-align center
		padding 0 calc(10px + (28 - 10) * ((100vw - 320px) / (1920 - 320)))

	.header-whatsapp
		margin-left calc(10px + (32 - 10) * ((100vw - 320px) / (1920 - 320)))
		@media screen and (max-width 1024px)
			margin-right 60px

		a
			display flex
			flex-direction column
			justify-content center
			align-items center
			width 44px
			height 44px
			color c-3
			font-size 35px
			margin 0

// Menu responsive
.responsive-logo
	margin-top 10px
	width 80%
	display block
	img
		display block
		width 100%
		height auto

.menu-overlay
	position fixed
	top 0
	left 0
	background-color black
	z-index -1
	width 100%
	height 100%
	opacity 0
	cursor pointer
	transition all 0.45s ease
	&.active
		z-index 1000
		opacity 0.8

.menu-mobile-close, .menu-mobile-open
	background-color c-2
	border-radius 7%
	color white
	cursor pointer
	font-size 28px
	height 42px
	line-height 42px
	position fixed
	right 10px
	text-align center
	top 24px
	transition all 0.45s ease
	width 42px
	transform rotate(0deg)

.menu-mobile-open
	opacity 1
	visibility hidden
	z-index 1002
	&.scrolling
		opacity 0.6
	&:hover
		opacity 1
	&.active
		visibility hidden
		opacity 0
		right 220px
		z-index 1000
		transform rotate(-90deg)

.menu-mobile-close
	visibility hidden
	opacity 0
	z-index 1000
	&.active
		visibility visible
		opacity 1
		right 205px
		z-index 1002
		transform rotate(-90deg)
.menu-sidebar
	width 200px
	height 100%
	overflow auto
	position fixed
	top 0
	right -200px
	background c-8
	z-index 1000
	transition right 0.45s ease
	&.active
		right 0

	.header-button
		padding 0 20px
		margin-top 40px

.menu-responsive
	padding-top 40px
	.header-item
		margin-bottom 15px
	.header-item a
		display block
		color c-3
		font-family t-0
		font-weight 400
		font-size 14px
		padding 0 20px
		&.active
			font-weight 600

.cnt-wrapper,.footer
	position relative
	left 0
	transition left 0.45s ease
	&.active
		left -200px
.wrapper
	overflow hidden

body
	&.active
		overflow hidden

@media screen and (max-width:1024px)
	.menu
		display none
	.menu-mobile-open
		visibility visible
