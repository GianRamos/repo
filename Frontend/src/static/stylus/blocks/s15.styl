.b15
	padding 100px 0 120px 0
	@media screen and (max-width 767px)
		padding 70px 0

.b15-head
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content center
	background-color c-23
	border-radius 16px
	padding 20px 83px
	margin-bottom 84px
	@media screen and (max-width 1024px)
		padding 20px 15px
	@media screen and (max-width 960px)
		flex-direction column
		justify-content inherit
		margin-bottom 40px

.b15-field
	width calc(50% - (101px + 32px))
	position relative
	margin 0 16px 0 16px
	placeholder(c-4, t-0)
	@media screen and (max-width 960px)
		width 100%
		margin 0 0 15px 0

	select, input
		width 100%
		height 56px
		color c-4
		font-family t-0
		font-weight 400
		font-size 14px
		border 1px solid c-4
		border-radius 20px
		appearance none
		box-sizing border-box
		padding 0 70px 0 50px
		@media screen and (max-width 960px)
			padding-left 30px

.b15-field-icon
	display flex
	flex-direction column
	justify-content center
	align-items center
	width 24px
	height 24px
	color c-4
	font-size 24px
	position absolute
	top 0
	bottom 0
	right 30px
	margin auto

.b15-btn
	height 56px
	min-width 186px
	background-color c-1
	color c-3
	font-family t-0
	font-weight 400
	font-size 16px
	text-align center
	border none
	border-radius 20px
	box-sizing border-box
	padding 0 10px
	margin-left 16px
	@media screen and (min-width 1025px)
		transition all .25s ease
		&:hover
			background-color c-16
			font-weight 500
	@media screen and (max-width 960px)
		margin-left 0

.b15-block
	display flex
	flex-direction row
	flex-wrap wrap
	align-items flex-start
	margin 0 -8px
	@media screen and (max-width 767px)
		margin 0

.b15-item
	width calc(100% / 4 - 8px)
	margin 16px 4px 0 4px
	@media screen and (max-width 1024px)
		width calc(100% / 3 - 8px)
	@media screen and (max-width 960px)
		width calc(100% / 2 - 8px)
	@media screen and (max-width 767px)
		width 100%
		margin 16px 0 0 0

.b15-card
	display block
	width 100%
	overflow hidden
	background-color c-11
	border-radius 10px
	position relative
	box-sizing border-box
	margin 0
	@media screen and (min-width 1025px)
		max-width 294px
		transition all .25s ease
		&:hover
			background-color c-0
			.b15-info
				background-color c-17
			.b15-name
				color c-3
			.b15-charge
				color c-2
			.b15-left
				color c-18
			.b15-right
				color c-3

.b15-image
	width 100%
	box-sizing border-box
	padding 13px 3px 0 3px
	margin 0
	img
		img-res()

.b15-info
	background-color c-12
	transition all .25s ease
	padding 0 25px 14px 12px

.b15-up
	padding 14px 0 14px 0

.b15-name
	display block
	line-height 1
	color c-0
	font-family t-0
	font-weight 500
	font-size 16px
	transition all .25s ease
	margin 0 0 10px 0

.b15-charge
	display block
	line-height 1
	color c-0
	font-family t-0
	font-weight 700
	font-size 12px
	text-transform uppercase
	transition all .25s ease
	margin 0

.b15-box
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content space-between
	align-items center
	border-top 1px solid c-15
	padding 9px 0

.b15-left
	display block
	width 67px
	line-height 1
	color c-13
	font-family t-0
	font-weight 500
	font-size 12px
	transition all .25s ease
	margin 0

.b15-right
	display block
	width calc(100% - 67px)
	line-height 1
	color c-14
	font-family t-0
	font-weight 400
	font-size 12px
	word-wrap break-word
	transition all .25s ease
	margin 0
	p
		margin 0
