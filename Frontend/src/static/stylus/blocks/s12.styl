.b12
	overflow hidden
	padding 50px 0 75px 0
	.slick-list
		@media screen and (min-width 961px)
			padding-right 30%
		@media screen and (min-width 1025px)
			padding-right 655px

.b12-head
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content space-between
	align-items center
	margin-bottom 50px
	@media screen and (max-width 767px)
		margin-bottom 30px

.b12-title-up
	display block
	width calc(100% - 100px)
	line-height 54px
	color c-4
	font-family t-0
	font-weight 600
	font-size 46px
	margin 0
	@media screen and (max-width 767px)
		width calc(100% - 40px)
		line-height 1.2
		font-size 30px

.b12-controls
	display flex
	flex-direction row
	flex-wrap wrap
	align-items center
	@media screen and (max-width 767px)
		flex-direction column
		align-items inherit

.b12-arrow
	display flex
	flex-direction column
	justify-content center
	align-items center
	width 30px
	height 30px
	color c-1
	font-size 14px
	cursor pointer
	border 1px solid c-1
	border-radius 50%
	opacity 0.5
	box-sizing border-box
	margin 0 10px 0 0
	@media screen and (min-width 1025px)
		transition all .25s ease
		&:hover
			opacity 1
	@media screen and (max-width 767px)
		margin-right 0
		margin-bottom 10px

	&:last-child
		margin-right 0
		@media screen and (max-width 767px)
			margin-bottom 0

.b12-slider
	width calc(1560% * 100 / 1200 + 30px)
	margin-left -30px
	@media screen and (max-width 960px)
		width calc(100% + 60px)
	@media screen and (max-width 767px)
		width calc(100% + 20px)
		margin-left -10px
	

.b12-item
	padding 0 30px
	@media screen and (max-width 767px)
		padding 0 10px

.b12-card
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content space-between
	max-width 875px
	width 100%
	background-color c-24
	border-radius 20px
	box-sizing border-box
	padding 48px 40px
	@media screen and (max-width 960px)
		max-width none
		padding 40px 30px
	@media screen and (max-width 767px)
		flex-direction column
		justify-content inherit
		padding 30px 15px

.b12-left
	width calc(306% * 100 / 795)
	@media screen and (max-width 767px)
		width 100%
		margin-bottom 30px

.b12-right
	width calc(450% * 100 / 795)
	@media screen and (max-width 767px)
		width 100%

.b12-icon
	width 50px
	margin 0 0 30px 0
	img
		img-res()

.b12-image
	width 100%
	margin 0
	img
		img-res()
		border-radius 20px

.b12-title
	display block
	line-height 28px
	color c-2
	font-family t-0
	font-weight 600
	font-size 20px
	margin 0 0 25px 0

.b12-subtitle
	display block
	line-height 32px
	color c-0
	font-family t-0
	font-weight 500
	font-size 24px
	margin 0 0 30px 0

.b12-description
	display block
	line-height 24px
	color c-0
	font-family t-0
	font-weight 300
	font-size 16px
	margin 0
	p
		margin 0