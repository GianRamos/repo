.b26
	padding 80px 0

.b26-content
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content space-between
	@media screen and (max-width 960px)
		flex-direction column
		justify-content inherit

.b26-left
	width calc(486% * 100 / 1200)
	padding-top 20px
	@media screen and (max-width 960px)
		width 100%
		padding-top 0
		margin-bottom 40px

.b26-right
	width calc(588% * 100 / 1200)
	@media screen and (max-width 960px)
		width 100%

.b26-title
	display block
	line-height 1.1
	color c-0
	font-family t-0
	font-weight 500
	font-size 16px
	margin 0 0 5px 0

.b26-subtitle
	display block
	line-height 46px
	color c-0
	font-family t-0
	font-weight 500
	font-size 32px
	margin 0
	@media screen and (max-width 767px)
		line-height 1.3
		font-size 30px
	
	strong
		font-weight 600

.b26-info
	padding 48px 0 0 0

.b26-blockup
	margin-bottom 25px

.b26-box
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content space-between
	align-items center
	margin-bottom 25px
	&:last-child
		margin-bottom 0

.b26-icon
	display flex
	flex-direction column
	justify-content center
	align-items center
	width 30px
	height 30px
	color c-2
	font-size 30px
	margin 0

.b26-texts
	width calc(100% - 55px)
	@media screen and (max-width 767px)
		width calc(100% - 40px)
	

.b26-textup
	display block
	line-height 1
	letter-spacing 0.7px
	color c-2
	font-family t-0
	font-weight 500
	font-size 14px
	text-transform uppercase
	margin 0 0 5px 0

.b26-textdown
	display block
	line-height 28px
	color c-0
	font-family t-0
	font-weight 500
	font-size 18px
	margin 0
	@media screen and (max-width 767px)
		font-size 16px

	p
		margin 0

.b26-schedule-title
	display block
	line-height 14px
	letter-spacing 0.7px
	color: c-14
	font-family t-0
	font-weight 500
	font-size 14px
	text-transform uppercase
	margin 0 0 13px 0

.b26-schedule-list
	display block
	line-height 28px
	color c-0
	font-family t-0
	font-weight 500
	font-size 18px
	margin 0
	@media screen and (max-width 767px)
		font-size 16px

	ul
		margin-left 30px
	li
		list-style-type disc

.b26-links
	display flex
	flex-direction row
	flex-wrap wrap

.b26-links-item
	margin 20px 16px 0 0
	@media screen and (max-width 767px)
		margin-right 10px
	
	&:last-child
		margin-right 0

.b26-links-btn
	display inline-block
	height 43px
	line-height 43px
	letter-spacing 0.7px
	background-color c-23
	color c-1
	font-family t-0
	font-weight 500
	font-size 14px
	text-transform uppercase
	border-radius 20px
	padding 0 16px 0 12px
	margin 0
	@media screen and (min-width 1025px)
		transition all .25s ease
		&:hover
			background-color c-26

.b26-links-icon
	display inline-block
	vertical-align middle
	width 30px
	height 30px
	font-size 25px
	text-align center
	margin 0 0 0 8px

.b26-description
	display block
	line-height 20px
	color c-0
	font-family t-0
	font-weight 400
	font-size 14px
	margin 0 0 30px 0
	p
		margin 0