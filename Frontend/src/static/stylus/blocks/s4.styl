.b4
	padding 50px 0

.b4-content
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content space-between
	align-items center
	@media screen and (max-width 960px)
		flex-direction column
		justify-content inherit

.b4-left
	width calc(486% * 100 / 1200)
	@media screen and (max-width 960px)
		width 100%
		margin-bottom 60px

.b4-right
	width calc(645% * 100 / 1200)
	position relative
	padding-bottom 57px
	@media screen and (max-width 960px)
		max-width 491px
		width 100%
		padding-bottom 0
		margin 0 auto

	&:after
		content ""
		width 226px
		height 355px
		background-color c-1
		border-radius 20px
		position absolute
		bottom 95px
		right 57px
		z-index 1
		@media screen and (max-width 1024px)
			height 260px
		@media screen and (max-width 960px)
			display none

.b4-title
	display block
	line-height 1.1
	color c-0
	font-family t-0
	font-weight 600
	font-size 46px
	margin 0 0 40px 0
	@media screen and (max-width 767px)
		font-size 30px

.b4-image-large
	width calc(491% * 100 / 645)
	position relative
	z-index 2
	margin 0
	@media screen and (max-width 960px)
		width 100%

	img
		img-res()

.b4-image-small
	width calc(358% * 100 / 645)
	position absolute
	bottom 0
	right 0
	z-index 3
	margin 0
	@media screen and (max-width 960px)
		display none

	img
		img-res()

.b4-button
	@media screen and (max-width 767px)
		button
			width 100%
			padding 0