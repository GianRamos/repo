.b8-radius
	.b8-image
		border-radius 20px 20px 0px 0px

.b8
	position relative

.b8-image
	width 100%
	height 350px
	background-position center
	background-repeat no-repeat
	background-size cover

.b8-block
	display flex
	flex-direction column
	justify-content center
	width 100%
	height 100%
	position absolute
	top 0
	left 0

.b8-content
	text-align center

.b8-title
	display block
	line-height 1.2
	color c-3
	font-family t-0
	font-weight 600
	font-size 46px
	margin 0
	@media screen and (max-width 767px)
		font-size 30px

.b8-subtitle
	display block
	line-height 1.2
	line-height 54px
	color c-3
	font-family t-0
	font-weight 400
	font-size 46px
	font-style italic
	margin 0
	@media screen and (max-width 767px)
		font-size 30px

.b8-button
	margin-top 30px

.b8-btn-link
	display inline-block
	height 42px
	line-height 42px
	color c-7
	font-family t-0
	font-weight 400
	font-size 16px
	padding 0 16px 0 12px
	margin 0
	@media screen and (min-width 1025px)
		&:hover
			font-weight 600

.b8-btn-icon
	display inline-block
	vertical-align middle
	width 18px
	height 18px
	line-height 18px
	font-size 14px
	margin-left 8px