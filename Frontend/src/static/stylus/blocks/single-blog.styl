.sng-banner
	background-size cover
	background-position center
	position relative

	.wancho
		height 339px
		display flex
		justify-content center
		z-index 3
		position relative
		flex-direction column
		@media screen and (max-width 768px)
			height 270px

	&:after
		content ""
		left 0
		top 0
		width 100%
		height 100%
		position absolute
		background linear-gradient(0deg, rgba(16, 28, 20, 0.56) 0%, rgba(53, 63, 56, 0.00) 78.73%)
		z-index 1
.sng-banner-title
	font-size 40px
	color #fff
	line-height 48px
	font-weight 700
	max-width 860px
	letter-spacing 0.02em
	text-transform uppercase
	margin 0
	span
		margin 0
		display block		
	@media screen and (max-width 1200px)
		font-size 40px
	@media screen and (max-width 768px)
		font-size 30px
		max-width 600px
		line-height 35px
.single-post
	.sng-banner-title
		max-width 800px
		font-size 40px
		line-height 48px
		
		@media screen and (max-width 1200px)
			font-size 40px
			max-width 650px
		@media screen and (max-width 768px)
			font-size 30px
			max-width 430px
			line-height 35px
			
		@media screen and (max-width 480px)
			line-height 1.4
			font-size 20px

.sng-banner-current-category			
	font-size 16px
	color #fff
	font-weight 700
	margin-bottom 20px
	span
		margin-right 10px


.sng-cnt
	padding-top 50px
	padding-bottom 60px
	@media screen and (max-width 768px)
		padding-top 35px

	.wancho	
		display flex
		flex-flow row wrap
		justify-content space-between
.sng-cnt-left
	width 59.5%
	@media screen and (max-width 1000px)
		width 100%
		margin-bottom 40px
	@media screen and (max-width 768px)
		margin-bottom 20px
	
.sng-cnt-description
	color #484C56
	font-size 14px
	font-weight 400
	line-height 19.6px
	margin-bottom 65px
	@media screen and (max-width 768px)
		margin-bottom 40px

	img
		max-width 100%
		height auto
		margin 20px 0
	h1,h2,h3,h4,h5,h6
		color #041E48
		font-weight 700
		margin-bottom 26px
		
	h1
		font-size 32px
		line-height 36px
	h2
		font-size 28px
		line-height 32px
	h3
		font-size 24px
		line-height 28px
		
	h4
		font-size 20px
		line-height 24px
	h5
		font-size 18px
		line-height 22px
	h6
		font-size 16px
		line-height 20px


	a
		color #7EB0C5

	ul
		padding-left 10px
		margin-bottom 15px
		li
			padding-left 12px
			position relative
			padding-bottom 10px
			list-style none
			&:last-child
				padding-bottom 0
			&:after
				content ""
				width 4px
				height 4px
				background-color c-0
				border-radius 50%
				position absolute
				left 0
				top 8px
				bottom 0

	table
		width 100%
		max-width 921px
		margin 0 auto
		border 1px solid #646567
		box-sizing border-box	
		margin-top 30px
		margin-bottom 30px
		tr
			border 1px solid #646567
			th
				font-family t-0
				border-right 1px solid #646567
				text-align left
				padding-left 27px
				padding-right 27px
				height 80px
				box-sizing border-box
			td
				border-right 1px solid #646567
				padding 27px
				box-sizing border-box
				&:first-child
					max-width 300px
	@media screen and (max-width 745px)
		table
			margin-top 20px
			margin-bottom 20px
			tr
				th
					padding-left 10px
					padding-right 10px
			tr
				td
					padding-left 10px
					padding-right 10px
					line-height 1.1
					font-size 13px

.sng-cnt-description
	#ez-toc-container
		width 100%
		box-sizing border-box
		ul li:after
			display none

	div#ez-toc-container p.ez-toc-title
		font-weight 600
		font-size 18px

	#ez-toc-container a
		color #000
		font-weight 600
		font-size 16px
		line-height 24px

	div#ez-toc-container ul.ez-toc-list a:hover
		color c-2
		
	div#ez-toc-container ul li
		font-size 100%

	.ez-toc-counter nav ul li a::before
		color c-2

.sng-cnt-title-post
	font-size 20px
	font-weight 500
	margin-bottom 26px		
.sng-cnt-right
	width 29%
	@media screen and (max-width 1000px)
		width 100%
		max-width 400px

.sng-cnt-text-red
	font-family t-0
	font-size 14px
	font-weight 400
	color #5F6EC9
	line-height 18px
	margin-right 20px

.sng-cnt-redes
	display flex
	align-items center
.sng-cnt-item-red
	margin 0
	width 36px
	height 36px
	border-radius 100%
	border 1px solid #5F6EC9
	color #5F6EC9
	display flex
	align-items center
	justify-content center
	font-size 16px
	margin-right 15px
	&:before
		font-size 22px

.sng-cnt-banner-bottom
	margin-top 30px
	img
		max-width 100%
		height auto
		

// Bloque 38

.sng
	padding-bottom 80px
	.owl-carousel .owl-stage-outer
		padding 5px
		padding-bottom 30px	
	.owl-nav
		display flex
		margin-top 30px
		justify-content center
	.owl-prev, .owl-next
		width 55px
		height 55px
		display flex
		align-items center
		justify-content center
		border-radius 50%
		background-color #001b83
		box-sizing border-box
		color #ffffff
		font-size 20px
		cursor pointer
		transition all .3s
		&:hover
			background-color #5F6EC9
	.owl-next
		margin-left 13px
.sng-title
	font-size 36px
	line-height 42px
	font-weight 500
	margin-bottom 37px
	text-align center
	color #001B83

.sng-slider	
	.owl-item
		.arch-list-item-left
			margin 0
			width 100%
	&.desktop			
		display flex
		flex-flow row wrap
		.arch-list-item-left
			width 32%
			margin-left 2%
			// &:nth-child(2n+1)
			// 	margin-left 2%
			&:first-child
				margin-left 0
	@media screen and (max-width 1000px)
		&.desktop	
			.arch-list-item-left
				width 30.5%
				margin-left 2%
			