// formulario
colorInput = c-0
colorLabel = c-0
colorLabeFocus =  c-0
colorLabelFijar = c-0
sizeLabel = 16px
sizeInput = 16px
sizeLabelUp = 12px
altoLabel = 46px

mbottom()
	margin-bottom 16px
	@media screen and (max-width 480px)
		margin-bottom 10px



//formulario	

// .g5-wrap-form
// 	background-color gray
.g5-input-three
	display flex
	justify-content space-between
	flex-flow row wrap
	.g5-input, .g5-select ,.g5-textarea
		width 32.5%
.g5-input-two
	display flex
	justify-content space-between
	flex-flow row wrap
	.g5-input, .g5-select ,.g5-textarea
		width 48.5%
.g5-wrap-form
	max-width 613px
	margin 0 auto
.g5-input, .g5-select ,.g5-textarea
	mbottom()
	position relative
	background-color transparent
	z-index 1
	box-sizing border-box
	border 1px solid c-0
	placeholder(c-0,t-0)
	border-radius 20px
	
	&.inFocus
		border-color c-2
		span
			color red
	input, select, textarea
		border 0
		width 100%
		height 30px
		box-sizing border-box
		display block
		line-height 100%
		background none
		box-shadow none
		appearance none
		padding 0 20px
		line-height 40px
		position absolute
		color colorInput
		left 0
		bottom 0
		font-weight 300
		font-size sizeInput
		overflow hidden		
		&:-webkit-autofill
			-webkit-box-shadow 0 0 0px 200px #fff inset
			-webkit-text-fill-color #181818
			border-radius 5px
			-webkit-background-color transparent !important
		&:focus
			
			~ label 
				span
					transform: translate3d(0, -13px, 0)
					font-size sizeLabelUp
					opacity 1
					color colorLabeFocus
				i, .g5-icoinpu
					font-size 18px
					transform translate3d(0, 0, 0)
				.g5-icoinput
					font-size 15px
		// &:invalid
		// 	color red
	input
		width calc(100% - 40px)
		right 0
		margin auto
		padding 0
	select
		color colorInput
		cursor pointer
		bottom 4px
		padding-right 55px
		option
			color c-7
		&::-ms-expand
			display none
		// option
		// 	background-color c-4
		// 	border-color c-4
				
	label
		display block
		height  altoLabel
		pointer-events none
		box-sizing border-box
		position relative
		border-radius: 10px
		&.fijar
			span
				transform translate3d(0, -13px, 0)
				font-size sizeLabelUp
				opacity 1
				color colorLabelFijar
			i, .g5-icoinput
				font-size 18px
			.g5-icoinput
				font-size 15px
		i, .g5-icoinput
			font-size 18px
			color colorLabel
			position absolute
			right 20px
			bottom 14px
			display inline-block
			align-items center
			justify-content center
			color c-0
			transition transform 0.2s, opacity 0.2s, font-size 0.2s
		.g5-icoinput
			color c-2
			font-size 9px
			top 13px
			bottom inherit
			left 25px
			right inherit
		strong
			color c-7
			font-weight normal
			margin-left 4px
	.no-effect 
		span, i, .g5-icoinput
			transform inherit !important
		span
			font-size 16px !important	
			
	span
		transform-origin 0% 50%
		padding 0 20px
		box-sizing border-box
		transition transform 0.2s, opacity 0.2s, font-size 0.2s
		display flex
		height 100%
		align-items center
		justify-content flex-start
		color colorLabel
		font-family t-0
		font-weight 300
		font-size sizeLabel

.g5-input
	&.two-inner
		border-bottom none
		.g5-input, .g5-select, .g5-textarea
			@media screen and (min-width 641px)
				margin-bottom 0

.g5-input-file
	background-color #EFF1FA
	border 1px solid transparent
	label
		pointer-events inherit
		position relative
		z-index 2   
		display flex
		align-items center
		padding 0 14px
		box-sizing border-box
	input   
		opacity 0
		height 46px
		cursor pointer
	.g5-icoinput
		&:before
			color #041E48
			font-size 20px

.g5-text-input
	line-height 1.2
	letter-spacing 0.07px
	color c-1
	font-weight 600
	font-size 14px
	box-sizing border-box
	padding-left 41px
	@media screen and (min-width 961px)
		padding-right 50px
	@media screen and (min-width 768px)
		padding-right 30px

.g5-inpufile-text
	display flex
	align-items center
	line-height 1.2
	color #041E48
	font-weight 500
	font-size 14px
	pointer-events none
	opacity 0.8
	height 100%
	z-index 1
	box-sizing border-box
	@media screen and (max-width 410px)
		display none

.g5-textarea
	width 100%
	textarea
		line-height 100%
		height 150px
		position static
		padding-top 23px
		box-sizing border-box
	label
		height 15px
		position absolute
		top 15px
		left 0
		width 100%
		span
			height 100%


.g5-terminos
	position relative
	margin-bottom 20px
	input[type="checkbox"]
		opacity 0
		visibility hidden
		position absolute
		top 0
		left 0
		&:checked + label
			.g5-terminos_icon
				&:after
					opacity 1
					visibility visible

.g5-terminos_nota
	position relative
	display block
	padding-left 30px	
.g5-title-block
	font-size 18px
	font-family t-2
	margin-bottom 25px
	color c-8
.g5-terminos_text
	line-height 21px
	color c-0
	font-family t-0
	font-weight 400
	font-size 14px
	p
		margin 0
	a
		color c-2
		font-weight 500
		text-decoration underline

.g5-terminos_icon
	position absolute
	top 0
	left 0
	display block
	width 18px
	height 18px
	border 1px solid transparent
	margin 0px 0 0 0
	&:before
		content ""
		width 100%
		height 100%
		border 1px solid c-0
		box-sizing border-box
		position absolute
		border-radius 0px
		top 0
		left 0
	&:after
		content "\e90b"
		display flex
		flex-direction column
		justify-content center
		align-items center
		width 100%
		height 100%
		color c-0
		font-family icomoon
		font-size 14px
		text-align center
		opacity 0
		visibility hidden
		transition all .25s ease-in-out
		position absolute
		top 0px
		left 0px
		
.g5-required
	display block
	line-height 1.1
	color c-2
	font-family t-0
	font-weight 400
	font-size 14px
	margin 25px 0 14px 0

.g5-input-radio
	width 20%
	input
		display none
		&:checked
			+ label
				&:after
					opacity 1
				&:before
					border 2px solid c-2
	label
		display flex
		font-size 16px
		color #484848
		font-weight 500
		line-height 21px
		align-items center
		position relative
		&:before
			content ""
			width 20px
			height 20px
			border-radius 100%
			border 2px solid c-2
			display inline-block
			margin-right 20px
			box-sizing border-box
		&:after
			content ""
			width 12px
			height 12px
			border-radius 100%
			background-color c-2
			position absolute
			top 0
			bottom 0
			left 4px
			opacity 0
			box-sizing border-box
			margin auto
	@media screen and (max-width 480px)
		width 50%
			

@media screen and (max-width 960px)
	.g5-input.two-inner
		width 100%			
@media screen and (max-width 745px)
	.g5-input-three
		.g5-input, .g5-select ,.g5-textarea
			width 100%	
@media screen and (max-width 640px)	
	.g5-politicas	
		margin-top 30px
	.g5-input-two:not(.b23-tipodoc)
		flex-direction column
		.g5-input, .g5-select
			width 100%
			
	.g5-input-two.two-in-two, .g5-input.two-inner
		margin-bottom 0