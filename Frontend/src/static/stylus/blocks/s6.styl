.b6
	padding 70px 0 100px 0
	@media screen and (max-width 767px)
		padding-bottom 70px

.b6-content
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content space-between
	align-items center
	@media screen and (max-width 960px)
		flex-direction column
		justify-content inherit
		align-items inherit

.b6-image
	width calc(650% * 100 / 1200)
	margin 0
	@media screen and (max-width 960px)
		width 100%
		margin-bottom 40px

	img
		img-res()
		border-radius 10px

.b6-info
	width calc(486% * 100 / 1200)
	@media screen and (max-width 960px)
		width 100%

.b6-title
	display block
	line-height 46px
	color c-0
	font-family t-0
	font-weight 500
	font-size 38px
	margin 0 0 45px 0
	@media screen and (max-width 767px)
		line-height 1.3
		font-size 30px
		margin-bottom 30px

.b6-description
	display block
	line-height 26px
	color c-0
	font-family t-0
	font-weight 400
	font-size 16px
	margin 0
	p
		margin 0