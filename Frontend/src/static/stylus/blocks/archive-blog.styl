// Bloque 28

.arch-banner
	background-size cover
	background-position center
	position relative
	.wancho
		height 339px
		display flex
		align-items center
		z-index 3
		position relative
		@media screen and (max-width 745px)
			height 200px

	&:after
		content ""
		left 0
		top 0
		width 100%
		height 100%
		position absolute
		background linear-gradient(0deg, rgba(16, 28, 20, 0.56) 0%, rgba(53, 63, 56, 0.00) 78.73%)
		z-index 1
.arch-banner-title
	font-size 40px
	color #fff
	font-weight 700
	max-width 600px
	line-height 48px
	letter-spacing 0.02em
	text-transform uppercase
	margin 0
	span
		margin 0
		color c-6
		display block
	@media screen and (max-width 1200px)
		font-size 40px
		max-width 350px
	@media screen and (max-width 745px)
		font-size 35px
		max-width 280px
.single-post
	.arch-banner-title
		max-width 800px
		font-size 48px
		
		@media screen and (max-width 1200px)
			font-size 40px
			max-width 430px
		@media screen and (max-width 745px)
			font-size 35px
			max-width 280px		
			
		@media screen and (max-width 480px)			
			font-size 22px

// Bloque 29
			
.arch-list
	padding-top 75px
	padding-bottom 90px
	.wancho
		display flex
		flex-flow row wrap
		justify-content space-between
	@media screen and (max-width 745px)
		padding-bottom 60px
		padding-top 30px
.arch-list-left
	width 66.1%
	@media screen and (max-width 1000px)
		width 100%
	@media screen and (max-width 745px)
		margin-bottom 40px
.arch-list-list
	display flex
	flex-flow row wrap
.arch-list-item-left
	width 48.5%
	margin-left 3%
	margin-bottom 30px
	box-shadow 0px 20px 80px rgba(0, 0, 0, 0.05)
	transition all .3s
	border-radius 0px 0px 20px 20px
	&:nth-child(2n+1)
		margin-left 0
	&:first-child
		margin-left 0
	&:hover
		.arch-list-figura-bg
			transform: scale(1.1)
	@media screen and (max-width 745px)
		width 100%
		margin-left 0
.arch-list-figura
	display flex
	overflow hidden
	height 217px
	border-radius 20px 20px 0px 0px
	img
		max-width 100%
		height auto
.arch-list-figura-bg
	height 100%
	width 100%
	transition: all 1s linear
	background-size cover
	background-position center
.arch-list-texto-item
	padding 25px
	padding-top 21px
.arch-list-title
	font-size 16px
	line-height 21px
	color #5F6EC9
	font-weight 600
	display block
	margin-bottom 15px
.arch-list-sub-title
	font-size 16px
	display block
	margin-bottom 35px
	line-height 24px
	font-weight 500
	min-height 43px
	color #333333
.arch-list-description
	color #434343
	font-size 14px
	font-weight 400
	min-height 60px
	line-height 20px
	p
		margin 0
.arch-list-right
	width 29%
	@media screen and (max-width 1000px)
		width 100%
		margin-top 40px
.arch-list-categoria
	font-size 20px
	font-weight 700
	line-height 25px
	color #484C56
	margin-bottom 12px
	&.last-child
		font-weight 700
		margin-bottom 15px
		
.arch-list-list-categoria
	display flex
	flex-flow row wrap
	margin-bottom 40px
.arch-list-item-categoria
	font-size 13px
	line-height 23px
	margin 0
	font-weight 400
	color #ffffff
	background-color #041E48
	border-radius 10px
	display flex
	align-items center
	justify-content center
	padding 10px 17px
	margin-right 10px
	margin-bottom 5px
	&.active
		background-color #5F6EC9
		color #fff
.arch-list-bg
	background-size cover
	background-position center
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	opacity 0
	border-radius 20px
	&:after
		content ""
		top 0
		left 0
		box-shadow: 0px 3px 10px -5px rgba(#041E48, 0.47)
		position absolute
		height 100%
		width 100%
		border-radius 20px
	&:before
		content ""
		top 0
		left 0
		background rgba(#000, 0.6)
		width 100%
		height 100%
		position absolute
		z-index 1
		border-radius 20px
		
.arch-list-text-banner
	height 104px
	border-radius 20px
	box-sizing border-box
	display flex
	flex-direction column
	justify-content center
	padding-left 30px
	padding-right 30px
	padding-top 10px
	padding-bottom 10px
	z-index 3
	position relative
.arch-list-item-right-reciente
	display block
	border-radius 20px
	margin-bottom 17px
	transition all .3s
	box-sizing border-box
	position relative
	border 1px solid #E0E0E0
	&:hover
		border none
		box-shadow 0px 3px 10px -5px rgba(#041E48, 0.47)
		border-radius 20px
		.arch-list-text-banner
			background-color transparent
		.arch-list-description-banner
			color #ffffff
			span
				color #ffffff
		.arch-list-bg
			opacity 1
.arch-list-description-banner
	font-size 18px
	font-weight 600
	line-height 23px
	transition all .3s
	&.black
		span
			color #333333
	p
		margin 0
		margin-bottom 5px
	span
		font-size 12px
		font-weight 600
		color #041E48
		transition all .3s
		letter-spacing 0.01em
		
.arch-list-paginador
	margin-top 32px
	margin-bottom 20px
	ul
		display flex
		justify-content center
		flex-flow row wrap
		align-items center
	li
		margin 0
		padding-left 5px
		box-sizing border-box
		&:first-child
			padding-left 0
	a.page-numbers, span.page-numbers.current
		color #333333
		font-size 16px
		font-family t-0
		font-weight 700
		width 48px
		border-radius 6px
		height 48px
		background-color transparent
		display flex
		align-items center
		justify-content center
		background-color transparent
		transition all .4s
		&:hover
			background-color #041E48
			color #fff
	
	span.page-numbers.current
		color #fff
		background-color #041E48

		
	.prev, .next
		color c-0
		width 55px !important
		height 51px !important
		display flex
		color rgba(c-0, 0.3)
		align-items center
		justify-content center
		background-color transparent
		box-sizing border-box
		font-size 20px !important
		transition all .4s
		i
			&:before
				color c-0
		&:hover
			i
				&:before
					color #fff
	.prev
		margin-right 20px
	.next
		margin-left 20px
		

