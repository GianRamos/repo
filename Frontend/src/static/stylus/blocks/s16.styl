.b16
	background-color c-8
	padding 118px 0 100px 0
	@media screen and (max-width 767px)
		padding-top 80px

.b16-content
	text-align center

.b16-title
	display block
	line-height 24px
	color c-3
	font-family t-0
	font-weight 500
	font-size 16px
	margin 0 0 10px 0

.b16-subtitle
	display block
	line-height 88px
	color c-3
	font-family t-0
	font-size 80px
	font-weight 500
	margin 0
	@media screen and (max-width 960px)
		line-height 1.1
		font-size 60px
	@media screen and (max-width 767px)
		font-size 30px