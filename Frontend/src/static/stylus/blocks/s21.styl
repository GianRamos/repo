.b21
	background-color c-3
	border-radius 20px 20px 0 0
	padding 80px 0 103px 0
	margin-top -20px
	@media screen and (max-width 767px)
		border-radius 10px 10px 0 0
		padding 70px 0

.b21-content
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content space-between
	align-items center
	@media screen and (max-width 960px)
		flex-direction column
		justify-content inherit
		align-items inherit

.b21-left
	width calc(486% * 100 / 1200)
	@media screen and (max-width 960px)
		width 100%
		margin-bottom 40px

.b21-right
	width calc(588% * 100 / 1200)
	@media screen and (max-width 960px)
		width 100%

.b21-title
	display block
	line-height 28px
	color c-0
	font-family t-0
	font-weight 600
	font-size 20px
	margin 0
	@media screen and (max-width 767px)
		line-height 1.5
		font-size 18px

	p
		margin 0

.b21-subtitle
	display block
	line-height 28px
	color c-0
	font-family t-0
	font-weight 400
	font-size 18px
	margin 0 0 16px 0
	@media screen and (max-width 767px)
		line-height 1.1
		font-size 16px

.b21-description
	display block
	line-height 24px
	color c-0
	font-family t-0
	font-weight 300
	font-size 16px
	margin 0
	@media screen and (max-width 767px)
		line-height 1.5
		font-size 15px

	p
		margin 0
	ul
		margin-left 20px
	li
		list-style-type disc

.b21-note
	line-height normal
	color c-0
	font-family t-0
	font-weight 400
	font-size 12px
	margin-top 20px
	p
		margin 0