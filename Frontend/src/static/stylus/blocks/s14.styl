.b14
	background-color c-8
	padding 118px 0 100px 0
	@media screen and (max-width 767px)
		padding 90px 0 80px 0

.b14-content
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content space-between
	@media screen and (max-width 960px)
		flex-direction column
		justify-content inherit

.b14-left
	width calc(690% * 100 / 1200)
	@media screen and (max-width 960px)
		width 100%
		margin-bottom 60px

.b14-right
	width calc(486% * 100 / 1200)
	@media screen and (max-width 960px)
		width 100%

.b14-title
	display block
	line-height 24px
	color c-3
	font-family t-0
	font-weight 500
	font-size 16px
	margin 0
	@media screen and (max-width 767px)
		margin-bottom 5px

.b14-subtitle
	display block
	line-height 88px
	color c-3
	font-family t-0
	font-weight 500
	font-size 80px
	margin 0
	@media screen and (max-width 767px)
		line-height 1.2
		font-size 36px

.b14-description
	display block
	line-height 28px
	color c-3
	font-family t-0
	font-weight 400
	font-size 20px
	margin 0
	@media screen and (max-width 767px)
		font-size 16px

	p
		margin 0 0 25px 0