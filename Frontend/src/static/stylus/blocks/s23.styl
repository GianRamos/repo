.b23
	background-color c-3
	border-radius 20px 20px 0px 0px
	padding 40px 0 60px 0
	margin-top -20px
	@media screen and (max-width 1024px)
		padding-top 80px
	@media screen and (max-width 767px)
		border-radius 10px 10px 0 0
		padding-top 50px

.b23-content
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content center
	max-width 1260px

.b23-card
	display block
	width calc(100% / 3 - 60px)
	background-color c-11
	border-radius 10px
	position relative
	box-sizing border-box
	padding 43px 18px 85px 18px
	margin 60px 30px 0 30px
	@media screen and (min-width 1025px)
		transition all .25s ease
		&:hover
			background-color c-4
			.b23-icon,
			.b23-subtitle,
			.b23-description
				color c-3
	@media screen and (max-width 1024px)
		width calc(100% / 3 - 20px)
		margin 20px 10px 0 10px
	@media screen and (max-width 960px)
		width calc(100% / 2 - 20px)
	@media screen and (max-width 767px)
		width 100%

.b23-icon
	display flex
	flex-direction column
	justify-content center
	align-items center
	width 54px
	height 54px
	color c-1
	font-size 54px
	margin 0 0 34px 0
	@media screen and (min-width 1025px)
		transition all .25s ease

.b23-subtitle
	display block
	line-height 38px
	color c-0
	font-family t-0
	font-weight 500
	font-size 30px
	margin 0 0 30px 0
	@media screen and (min-width 1025px)
		transition all .25s ease
	@media screen and (max-width 767px)
		line-height 1.2
		font-size 26px

	p
		margin 0

.b23-description
	display block
	line-height 20px
	color c-0
	font-family t-0
	font-weight 400
	font-size 14px
	margin 0
	@media screen and (min-width 1025px)
		transition all .25s ease

	p
		margin 0

.b23-button
	width calc(100% - 36px)
	position absolute
	bottom 43px
	left 0
	right 0
	margin auto

.b23-btn
	display inline-block
	height 26px
	line-height 26px
	color c-2
	font-family t-0
	font-weight 600
	font-size 14px
	padding 0 16px 0 0
	margin 0

.b23-btn-icon
	display inline-block
	vertical-align middle
	width 18px
	height 18px
	line-height 18px
	color c-2
	text-align center
	font-size 12px
	margin 0 0 0 8px