.b9
	background-color c-8
	padding 25px 0 0 0

.b9-content
	max-width 1400px
	position relative

.b9-image
	width 100%
	height 457px
	background-position center
	background-repeat no-repeat
	background-size cover
	border-radius 25px
	@media screen and (max-width 767px)
		height 350px

.b9-title
	display flex
	flex-direction column
	justify-content center
	max-width 894px
	width 100%
	height 100%
	line-height 1.1
	color c-3
	text-align center
	font-family t-0
	font-weight 500
	font-size 80px
	position absolute
	top 0
	left 0
	right 0
	box-sizing border-box
	padding 0 10px
	margin 0 auto
	@media screen and (max-width 960px)
		font-size 70px
	@media screen and (max-width 767px)
		font-size 40px